<?xml version="1.0" encoding="utf-8"?>
<!-- Migrated from Odoo 16.0 to 18.0 -->
<!-- Note: attrs is deprecated in Odoo 17+, use invisible attribute directly -->
<odoo>
    <data>
        <record id="ecpay_invoice_view_form" model="ir.ui.view">
            <field name="name">ecpay_invoice_view_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="after">
                    <button name="run_refund" type="object" class="oe_stat_button oe_highlight" icon="fa-trash-o"
                            string="折讓電子發票"
                            invisible="not show_create_invoice or not is_refund or refund_finish or move_type != 'out_refund' or state != 'posted'"/>
                    <button name="create_ecpay_invoice" type="object" class="oe_stat_button oe_highlight"
                            icon="fa-pencil-square-o" string="開立電子發票"
                            invisible="not show_create_invoice or uniform_state != 'to invoice' or move_type != 'out_invoice' or state != 'posted'"/>
                    <button name="action_run_invoice_invalid" type="object" class="oe_stat_button oe_highlight"
                            icon="fa-trash-o" string="作廢電子發票"
                            invisible="not ecpay_invoice_id or state != 'posted' or move_type == 'out_refund'"/>
                    <button name="action_run_refund_invalid" type="object" class="oe_stat_button oe_highlight"
                            icon="fa-trash-o" string="作廢折讓電子發票"
                            invisible="not IA_Allow_No or show_create_invoice or uniform_state == 'invoiced' or not is_refund or move_type != 'out_refund' or state != 'posted'"/>
                </xpath>
                <xpath expr="//page[@id='other_tab_entry']" position="after">
                    <page name="uniform_invoice" id="uniform_invoice" string="綠界電子發票">
                        <group string="綠界電子發票欄位">
                            <group>
                                <field name="uniform_state"/>
                                <field name="ecpay_invoice_id"/>
                                <field name="IIS_Relate_Number"/>
                                <field name="IIS_Sales_Amount"/>
                                <field name="IIS_Remain_Allowance_Amt"/>
                                <field name="IIS_Invalid_Status"/>
                                <field name="IIS_Issue_Status"/>
                                <field name="ecpay_tax_type"/>
                            </group>
                            <group>
                                <!-- BUG-002, BUG-011: Fields editable before invoice issuance -->
                                <field name="is_donation" readonly="uniform_state != 'to invoice'"/>
                                <field name="lovecode" readonly="uniform_state != 'to invoice'"
                                       invisible="not is_donation"/>
                                <field name="is_print" readonly="uniform_state != 'to invoice'"/>
                                <field name="ec_print_address" readonly="uniform_state != 'to invoice'"
                                       invisible="not is_print"/>
                                <field name="ecpay_CustomerIdentifier" readonly="uniform_state != 'to invoice'"/>
                                <field name="ec_ident_name" readonly="uniform_state != 'to invoice'"/>
                                <field name="carrierType" readonly="uniform_state != 'to invoice'"/>
                                <!-- BUG-001: New input field for carrier number -->
                                <field name="input_carrier_num" readonly="uniform_state != 'to invoice'"
                                       invisible="carrierType not in ['2', '3']"/>
                                <!-- Display ECPay-assigned carrier number after issuance -->
                                <field name="carrierNum" invisible="uniform_state == 'to invoice'"/>
                            </group>
                        </group>
                        <group string="綠界發票折讓">
                            <group>
                                <field name="III_Invoice_No"/>
                                <field name="IA_Invoice_No"/>
                                <field name="IA_Allow_No"/>
                                <field name="refund_finish" invisible="1"/>
                                <field name="is_refund" invisible="1"/>
                                <field name="show_create_invoice" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="ecpay_account_invoice_view_tree" model="ir.ui.view">
            <field name="name">ecpay_account_invoice_view_tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='status_in_payment']" position="after">
                    <field name="ecpay_invoice_id" optional="show" string="ECPay Invoice No"/>
                    <field name="IIS_Sales_Amount" optional="hide" string="Invoice Amount"/>
                    <field name="IIS_Invalid_Status" optional="hide" string="Invalid Status"/>
                    <field name="IIS_Issue_Status" optional="hide" string="Issue Status"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>